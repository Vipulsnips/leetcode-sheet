class Solution {
public:
    int totalFruit(vector<int>& fruits) {
        int s=0,e=0,n=fruits.size(),cnt=0,ans=0;
        map <int,int> mp;
        while(e<n){
            mp[fruits[e]]++;
            cnt++;
            while(mp.size() > 2 && s<=e){
                mp[fruits[s]]--;
                if(mp[fruits[s]]==0) mp.erase(fruits[s]);
                s++;
                cnt--;
            }
            e++;
            ans=max(ans,cnt);
        }
        return ans;
    }
};
