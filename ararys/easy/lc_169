class Solution {
public:
    int majorityElement(vector<int>& nums) {
        sort(nums.begin(),nums.end());
        int n=nums.size();
        int flag=0;int cnt=0;int maxm=0;
        if(n==1) return nums[0];
        for(int i=0;i<n-1;i++){
            if(nums[i]!=nums[i+1]){
                flag=0;
            }
            else{
                flag++;
            }
            if(flag>=n/2){
                return nums[i];
            }
        }
        return -1;
    }
};
