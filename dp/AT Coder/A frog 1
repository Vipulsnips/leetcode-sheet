    #include <bits/stdc++.h>
    using namespace std;

    #define MOD 1000000007
    #define fastIO \
        ios::sync_with_stdio(false); \
        cin.tie(NULL); \
        cout.tie(NULL); \
        cout.precision(numeric_limits<double>::max_digits10);

    #define ll long long

    int main() {
        fastIO;
        ll n;
        cin >> n;
        vector <ll> a(n);
        for(auto &i:a) cin>>i;
        vector < ll> dp(n,0);
        dp[0]=0;
        for(ll i=1;i<n;i++){
            ll x= (i-1)>=0 ? (abs(a[i]-a[i-1])+dp[i-1] ) : LLONG_MAX;
            ll y= (i-2)>=0 ? (abs(a[i]-a[i-2])+dp[i-2] ) : LLONG_MAX;
            dp[i]=min(x,y);
            // cout<<dp[i]<<endl;
        } 
        cout<<dp[n-1]<<endl;
        return 0;
    }
