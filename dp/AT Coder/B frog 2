    #include <bits/stdc++.h>
    using namespace std;

    #define MOD 1000000007
    #define fastIO \
        ios::sync_with_stdio(false); \
        cin.tie(NULL); \
        cout.tie(NULL); \
        cout.precision(numeric_limits<double>::max_digits10);

    #define ll long long

    int main() {
        fastIO;
        ll n,k;
        cin >> n>>k;
        vector <ll> a(n);
        for(auto &i:a) cin>>i;
        vector < ll> dp(n,LLONG_MAX);
        dp[0]=0;
        for(ll i=1;i<n;i++){
            for(ll j=1;j<=k;j++){
                ll x= (i-j)>=0 ? (abs(a[i]-a[i-j])+dp[i-j] ) : LLONG_MAX;
                dp[i]=min(dp[i],x);
            }
            // ll x= (i-1)>=0 ? (abs(a[i]-a[i-1])+dp[i-1] ) : LLONG_MAX;
            // ll y= (i-2)>=0 ? (abs(a[i]-a[i-2])+dp[i-2] ) : LLONG_MAX;
            // dp[i]=min(x,y);
            // cout<<dp[i]<<endl;
        } 
        cout<<dp[n-1]<<endl;
        return 0;
    }
